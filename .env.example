# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_GROUP_ID=your_group_id_here

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///bot.db

# Parser Configuration
PARSE_INTERVAL_MINUTES=120  # Check for new articles every 2 hours
MAX_ARTICLES_PER_FETCH=5
REQUEST_TIMEOUT_SECONDS=30
MIN_ARTICLE_DATE=2025-08-01  # Only parse articles from this date onwards (YYYY-MM-DD)
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Translation Settings
TRANSLATION_TARGET_LANGUAGE=ru
TRANSLATION_SOURCE_LANGUAGE=auto

# Optional API keys for better translation
# MICROSOFT_TRANSLATOR_KEY=your_microsoft_key
# OPENAI_API_KEY=your_openai_key

# Proxy Settings (optional, if needed to access news sites)
# PROXY_URL=http://proxy-server:8080
# PROXY_USERNAME=username
# PROXY_PASSWORD=password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, console

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8000

# Sentry (optional)
SENTRY_DSN=

# Environment
ENVIRONMENT=production  # Options: development, production
EOF < /dev/null
