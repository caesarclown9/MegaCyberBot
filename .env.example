# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# General Cybersecurity News Group
TELEGRAM_GROUP_ID=your_general_group_id_here  # e.g., -1002680179056
TELEGRAM_TOPIC_ID=  # Optional: Topic ID for general news if using forum supergroup

# Vulnerabilities News Group  
TELEGRAM_VULNERABILITIES_GROUP_ID=your_vulnerabilities_group_id_here  # e.g., -1002680179057
TELEGRAM_VULNERABILITIES_TOPIC_ID=  # Optional: Topic ID for vulnerabilities if using forum supergroup

# Database Configuration
# For production (Supabase PostgreSQL)
# IMPORTANT: Use pooler endpoint for better connection stability
# Format: postgresql+asyncpg://postgres.[PROJECT_ID]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
# Example: DATABASE_URL=postgresql+asyncpg://postgres.xxxxxxxxxxxx:password@aws-0-eu-central-1.pooler.supabase.com:6543/postgres
# 
# Alternative if pooler doesn't work:
# DATABASE_URL=postgresql+asyncpg://postgres:[PASSWORD]@db.[PROJECT_ID].supabase.co:5432/postgres
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# Parser Configuration
PARSE_INTERVAL_MINUTES=120  # Check for new articles every 2 hours
MAX_ARTICLES_PER_FETCH=10   # Total articles to fetch
MAX_ARTICLES_PER_CATEGORY=5 # Max 5 articles for general + 5 for vulnerabilities
REQUEST_TIMEOUT_SECONDS=30
MIN_ARTICLE_DATE=2024-01-01  # Only parse articles from this date onwards (YYYY-MM-DD)
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Translation Settings
TRANSLATION_TARGET_LANGUAGE=ru
TRANSLATION_SOURCE_LANGUAGE=auto

# Optional API keys for better translation
# MICROSOFT_TRANSLATOR_KEY=your_microsoft_key
# OPENAI_API_KEY=your_openai_key

# Proxy Settings (optional, if needed to access news sites)
# PROXY_URL=http://proxy-server:8080
# PROXY_USERNAME=username
# PROXY_PASSWORD=password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, console

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8000

# Sentry (optional)
SENTRY_DSN=

# Environment
ENVIRONMENT=production  # Options: development, production

# API Configuration
# PARSE_API_KEY=your_secure_api_key_here  # API key for manual parse trigger via /parse endpoint
